block contenido
    style.
        .labelSer {
            font-size: 2em; 
            background-color: black; 
            color: white; 
            border-radius: 8px;
        }
    script.
        $(document).ready( function(){
            $('#subMenuAdministracion').removeClass('hidden');
            $('#spanMenuAdministracion').removeClass('fa-angle-left');
            $('#spanMenuAdministracion').addClass('fa-angle-down'); 
            
            $('#subMenuAdmPlanta').removeClass('hidden');
            $('#spanMenuAdmPlanta').removeClass('fa-angle-left');
            $('#spanMenuAdmPlanta').addClass('fa-angle-down');     

            $('#subMenuTipoCamaron').removeClass('hidden');
            $('#spanMenuTipoCamaron').removeClass('fa-angle-left');
            $('#spanMenuTipoCamaron').addClass('fa-angle-down');   

            $('#talla').on('change', function(){
                asignarNombre();
            });

            $('#presentacion').on('change', function(){
                asignarNombre();
            });

            obtenerfecha();
            obtenerhora();
            calcularKgsLbs();
            $('[data-toggle="tooltip"]').tooltip();
        });

        function obtenerfecha(){
            var fecha = new Date()
            var dia = fecha.getDate();
            var mes = fecha.getMonth()+1;
            var anio = fecha.getFullYear();

            if(dia < 10){
                dia = "0"+dia;
            }

            if(mes < 10){
                mes = "0"+mes;
            }

            $('#fecha').text(dia+"/"+mes+"/"+anio);
        }

        function obtenerhora(){
            var tiempo = new Date();
            var horas = tiempo.getHours();
            var minutos = tiempo.getMinutes();
            var segundos = tiempo.getSeconds();
            var dn ="";

            if(horas < 12){
                dn = "a.m.";
            }else{
                dn = "p.m.";
            }

            if(minutos < 10){
                minutos = "0"+minutos;
            }

            if(segundos < 10){
                segundos = "0"+segundos;
            }
                
            $("#hora").text(horas+":"+minutos+":"+segundos+" "+dn+"    ");
            setTimeout('obtenerhora()',1000);
        }

        function asignarNombre(){
            $('#nombre').val($('#talla').val() + ' - ' + $('#presentacion').val());
        }

        function calcularKgsLbs(){
            if( $('#cantidadMaster').val() > 0 ){
                var pesoM = 0.00;

                if($('#presentacion').val().toLowerCase() == 'frizado 20 kgs'){
                    pesoM = 20.00;
                } else if($('#presentacion').val().toLowerCase() == 'top open 40lbs'){
                    pesoM = 18.1416;
                } else if($('#presentacion').val().toLowerCase() == 'iqf 10 x 4 40lbs'){
                    pesoM = 18.1416;
                }

                var kgs = parseFloat($('#cantidadMaster').val()) * parseFloat(pesoM);
                var lbs = parseFloat(kgs) * 2.20462;

                $('#totalKgs').val(parseFloat(kgs).toFixed(2));
                $('#totalLbs').val(parseFloat(lbs).toFixed(2));
            }
        }

    //Termina Javascript

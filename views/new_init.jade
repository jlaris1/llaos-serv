doctype html
html(lang="es")
    head
        title Llaos 2.0
        meta(charset="utf-8")
        link(rel="shortcut icon" href="/imgs/icono128.ico")
        link(href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' rel="stylesheet")
        link(href='https://use.fontawesome.com/releases/v5.0.8/css/solid.css' rel="stylesheet")
        link(href='css/style.css' rel="stylesheet")
        script(type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js')
        script(type='text/javascript' src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
        script(type='text/javascript' src='https://use.fontawesome.com/releases/v5.0.7/js/all.js')
    body
        .modal-dialog.text-center(data-overlay="false")
            .col-sm-8.main-section
                .model-content
                    div.col-12.user-img
                        img(src="imgs/camy.png")
                    form.col-12(method="post" action="/inicio")
                        .form-group
                            input.form-control(type="text" name="user" placeholder="Usuario" autofocus)
                        .form-group
                            input.form-control(type="password" name="pass" placeholder="Contraseña")
                        button.btn(type="submit")
                            i.fas.fa-sign-in-alt
                            |   Iniciar
                    .col-12.forgot
                        a(href="#")
                            |   Olvidó su password?
        .pie.modal-dialog
            .col-12.msg.text-center.text-truncate
                label(style="margin-top: 5px;") #{ msg }
        function obtenerCostos(){
            var id_1 = $('#alimento_1').val() != null ? $('#alimento_1').val() : null;
            var id_2 = $('#alimento_2').val() != null ? $('#alimento_2').val() : null;
            var id_3 = $('#alimento_3').val() != null ? $('#alimento_3').val() : null;


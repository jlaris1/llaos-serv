            var cantidad_2 = $('#input_alimento_2').val() != "" ? parseFloat($('#input_alimento_2').val()) : parseFloat(0);
            var cantidad_3 = $('#input_alimento_3').val() != "" ? parseFloat($('#input_alimento_3').val()) : parseFloat(0);

            var costo_racion_1_usd = parseFloat(0);
            var costo_racion_1_mxn = parseFloat(0);
            var costo_racion_2_usd = parseFloat(0);
            var costo_racion_2_mxn = parseFloat(0);
            var costo_racion_3_usd = parseFloat(0);
            var costo_racion_3_mxn = parseFloat(0);
            var costo_racion_usd = parseFloat(0);
            var costo_racion_mxn = parseFloat(0);
            var costo_dia_usd = parseFloat(0);
            var costo_dia_mxn = parseFloat(0);

            var moneda_1 = "";
            var moneda_2 = "";
            var moneda_3 = "";

            var usd = 0;
            var mxn = 0;

            //console.log(id_1 +" - "+ id_2 +" - "+ id_3);

            for(var i = 0; i <= alimentos.length - 1; i ++){
                if(alimentos[i]._id == id_1){
                    //console.log(alimentos[i].precioUnitario + ' * ' +  cantidad_1);
                    
                    if(alimentos[i].moneda == "USD"){
                        moneda_1 = 'usd';
                        usd += 1;
                        costo_racion_1_usd = parseFloat(alimentos[i].precioUnitario) * parseFloat(cantidad_1);
                    } else {
                        mxn += 1;
                        moneda_1 = 'mxn';
                        costo_racion_1_mxn = parseFloat(alimentos[i].precioUnitario) * parseFloat(cantidad_1);
                    }
                }

                if(alimentos[i]._id == id_2){
                    if(alimentos[i].moneda == "USD"){
                        usd += 1;
                        moneda_2 = 'usd';
                        costo_racion_2_usd = parseFloat(alimentos[i].precioUnitario) * parseFloat(cantidad_2);
                    } else {
                        mxn += 1;
                        moneda_2 = 'mxn';
                        costo_racion_2_mxn = parseFloat(alimentos[i].precioUnitario) * parseFloat(cantidad_2);
                    }
                }
                
                if(alimentos[i]._id == id_3){                   
                    if(alimentos[i].moneda == "USD"){
                        usd += 1;
                        moneda_3 = 'usd';
                        costo_racion_3_usd = parseFloat(alimentos[i].precioUnitario) * parseFloat(cantidad_3);
                    } else {
                        mxn += 1;
                        moneda_3 = 'mxn';
                        costo_racion_3_mxn = parseFloat(alimentos[i].precioUnitario) * parseFloat(cantidad_3);
                    }
                }
            }

            /*** Obtener el costo por ración*/
            
            

            /*** revisar el tipo de moneda*/
            if(usd > mxn){
                costo_racion_usd = parseFloat(costo_racion_1_usd + costo_racion_2_usd + costo_racion_3_usd).toFixed(2);
                costo_dia_usd = parseFloat(costo_racion_usd * 12).toFixed(2);

                $('#span_costo_racion').text('$ ' + costo_racion_usd + ' USD (' + parseFloat(costo_racion_usd * parseFloat($('#span_tipo_cambio').text())).toFixed(2) + ' MXN)'); 
                $('#span_costo_dia').text('$ ' + costo_dia_usd + ' USD (' + parseFloat(costo_dia_usd * parseFloat($('#span_tipo_cambio').text())).toFixed(2) + ' MXN)'); 
            } else {
                costo_racion_mxn = parseFloat(costo_racion_1_mxn + costo_racion_2_mxn + costo_racion_3_mxn).toFixed(2);
                costo_dia_mxn = parseFloat(costo_racion_mxn * 12).toFixed(2);

                $('#span_costo_racion').text('$ ' + costo_racion_mxn + ' MXN'); 
                $('#span_costo_dia').text('$ ' + parseFloat(costo_dia_mxn).toFixed(2) + ' MXN' ); 
            }
        }
    

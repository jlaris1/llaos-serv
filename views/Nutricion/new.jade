                    $("#span_modulos").text(data.modulos[0].nombre);
                    
                    if(data.modulos.length > 1){
                        for(let i = 1; i <= data.modulos.length -1; i++){
                            $("#span_modulos").text($("#span_modulos").text() + ", " +data.modulos[i].nombre);
                        }
                    }
                }

               if(data.lista_nutricion.length > 0){
                    for(var i=0; i <= data.lista_nutricion.length -1 ; i++){
                        if(data.lista_nutricion[i].estanque == $('#idPis'+data.lista_nutricion[i].estanque).val()){
                            var id = data.lista_nutricion[i].estanque;

                            var r1 = data.lista_nutricion[i] == undefined ? parseFloat(0) : parseFloat(data.lista_nutricion[i].kg_racion).toFixed(2);
                            var r2 = data.lista_nutricion[i + 1] == undefined ? parseFloat(0) : parseFloat(data.lista_nutricion[i + 1].kg_racion).toFixed(2);
                            var r3 = data.lista_nutricion[i + 2] == undefined ? parseFloat(0) : parseFloat(data.lista_nutricion[i + 2].kg_racion).toFixed(2);
                            var r4 = data.lista_nutricion[i + 3] == undefined ? parseFloat(0) : parseFloat(data.lista_nutricion[i + 3].kg_racion).toFixed(2);
                            var r5 = data.lista_nutricion[i + 4] == undefined ? parseFloat(0) : parseFloat(data.lista_nutricion[i + 4].kg_racion).toFixed(2);

                            var suma = parseFloat(r1) + parseFloat(r2) + parseFloat(r3) + parseFloat(r4) + parseFloat(r5);

                            $('#r1'+id).text(r1);
                            $('#r2'+id).text(r2);
                            $('#r3'+id).text(r3);
                            $('#r4'+id).text(r4);
                            $('#r5'+id).text(r5);
                            $('#kg_dia'+id).text(suma);

                            i += 4;
                        }
                    }
               }

            }, "json");
        }

        function guardarRegistros(){
            abrirLoader();

            if(nutricion.length == 0) {
                $('#alert').removeClass('alert-success');
                $('#alert').addClass('alert-warning');
                $('#alertDiv').removeClass('hidden');
                $('#msg1').text('Es necesario ingresar ');
                $('#msg2').text('en al menos una piscina');
                $('#msg_alert').text('parámetros ');
                $('#loader').addClass('hidden');
                return;
            }

            $.post( "/nutricion/add", {
                nutricion: nutricion
            }, (data) => {
                //console.log(data);
                $('#span_estatus').text(data.estatus);
                
                // Mostrar notificación de guardado correcto 
                $('#alert').removeClass('alert-warning');
                $('#alert').addClass('alert-success');
                $('#alertDiv').removeClass('hidden');
                $('#msg1').text('Se ha realizado con ');
                $('#msg2').text('el registro de parámetros');
                $('#msg_alert').text('éxito ');
                $('#guardar').addClass('disabled');
            }, "json");

            $('#loader').addClass('hidden');

            cerrarLoader();
        }

        function siguienteRacion(idS) {
            var id = idS.split("_")[1];

            var kg = $('input[name="racion'+id+'"]').val() == "" ? parseFloat(0) : parseFloat($('input[name="racion'+id+'"]').val());
            var kg_sig = kg * ( 1.0 + parseFloat(parseFloat($('input[name="ajuste'+id+'"]').val()) / 100));
            $('#kg_sig'+id).text(parseFloat(kg_sig).toFixed(2));       
        }

        function registrarParametro(idS){
            var id = idS.split("_")[1];
            var obj = new Object()

            obj.charola_1 = $("input[name=charola1"+id+"]").val() == "" ? parseFloat(0) : $("input[name=charola1"+id+"]").val();
            obj.charola_2 = $("input[name=charola2"+id+"]").val() == "" ? parseFloat(0) : $("input[name=charola2"+id+"]").val();
            obj.charola_3 = $("input[name=charola3"+id+"]").val() == "" ? parseFloat(0) : $("input[name=charola3"+id+"]").val();
            obj.charola_4 = $("input[name=charola4"+id+"]").val() == "" ? parseFloat(0) : $("input[name=charola4"+id+"]").val();
            obj.kg_racion = $("input[name=racion"+id+"]").val() == "" ? parseFloat(0) : $("input[name=racion"+id+"]").val();
            obj.porcent_ajuste = $("input[name=ajuste"+id+"]").val() == "" ? parseFloat(0) : $("input[name=ajuste"+id+"]").val();
            obj.codigo_racion = $("#cod" + id).text();
            obj.suma = $("#suma" + id).text();
            obj.siguiente_racion = $("#kg_sig" + id ).text();
            obj.estanque = $("input[name=idPis"+id+"]").val();
            obj.hora = hora;
            obj.tiempo = $("#span_tiempo").text();
            obj.charolero = $('#user').val();

            if( obj.charola_1 == 0 &&
               obj.charola_2 == 0 &&
               obj.charola_3 == 0 &&
               obj.charola_4 == 0 &&
               obj.kg_racion == 0 &&
               obj.porcent_ajuste == 0 ) { 
                   console.log(" Nose mandará a registrar piscina: " + id);
               } else {
                   nutricion.push(obj);
               }

            console.log(nutricion);
        }


        function obtenerFecha(){
            var fecha = new Date()
            var dia = fecha.getDate();
            var mes = fecha.getMonth()+1;
            var anio = fecha.getFullYear();

            if(dia < 10){
                dia = "0"+dia;
            }

            if(mes < 10){
                mes = "0"+mes;
            }

            $('#fecha').text(dia+"/"+mes+"/"+anio + " - ");
        }

        function obtenerHora(){
            var tiempo = new Date();
            var horas = tiempo.getHours();
            var minutos = tiempo.getMinutes();
            var segundos = tiempo.getSeconds();
            var dn ="";

            if (horas < 12) {
                if(cambiar_tiempo == true) {
                    $("#span_tiempo").text("AM");
                }
                dn = "a.m.";
            } else {
                if(cambiar_tiempo == true) {
                    $("#span_tiempo").text("PM");
                }
                dn = "p.m.";
            }

            if(minutos < 10){
                minutos = "0"+minutos;
            }

            if(segundos < 10){
                segundos = "0"+segundos;
            }
                
            hora = horas+":"+minutos+":"+segundos;
            $("#hora").text(horas+":"+minutos+":"+segundos+" "+dn+"    ");
            setTimeout('obtenerhora()',1000);
        }

        function sumarCodigo(idS, num_charola){
            var id = idS.split("_")[1];
            var dividir = 0.00;
            var suma = 0.00;
            var codigo_racion = 0.00;
            //  tamaño_suma.includes()

            if(parseFloat($('input[name="charola'+num_charola+''+id+'"]').val()) < 0 || parseFloat($('input[name="charola'+num_charola+''+id+'"]').val()) > 2) {
                $('#alert').removeClass('success');
                $('#alert').addClass('warning');
                $('#alertDiv').removeClass('hidden');
                $('#msg1').text('Se adminten solo cantidades ');
                $('#msg2').text('revise la charola ' + num_charola);
                $('#msg_alert').text('de 0 a 2 ');
                // focus charola.
                $('input[name="charola'+num_charola+''+id+'"]').focus();
                return;
            }

            var charola_1 = $('input[name="charola1'+id+'"]').val() == "" ? null : parseFloat($('input[name="charola1'+id+'"]').val());
            var charola_2 = $('input[name="charola2'+id+'"]').val() == "" ? null : parseFloat($('input[name="charola2'+id+'"]').val());
            var charola_3 = $('input[name="charola3'+id+'"]').val() == "" ? null : parseFloat($('input[name="charola3'+id+'"]').val());
            var charola_4 = $('input[name="charola4'+id+'"]').val() == "" ? null : parseFloat($('input[name="charola4'+id+'"]').val());           

            dividir += charola_1 == null ? 0 : 1;
            dividir += charola_2 == null ? 0 : 1;
            dividir += charola_3 == null ? 0 : 1;
            dividir += charola_4 == null ? 0 : 1;
           
            suma += charola_1 == null ? 0 : charola_1;
            suma += charola_2 == null ? 0 : charola_2;
            suma += charola_3 == null ? 0 : charola_3;
            suma += charola_4 == null ? 0 : charola_4;

            $('#suma'+id).text(suma);
            $('#cod'+id).text(parseFloat(suma/dividir).toFixed(2));
        }


                $('#msg1').text('Es necesario ingresar ');
                $('#msg2').text('en al menos una piscina');
                $('#msg_alert').text('parámetros ');
                $('#loader').addClass('hidden');
                cerrarLoader();
                return;
            }

            $.post( "/nutricion/add", {

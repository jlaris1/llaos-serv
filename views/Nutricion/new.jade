        function asignarTiempo(){
            cambiar_tiempo = false;
            $('#span_tiempo').text($('#select_tiempo').val());
        }

        function asignarFecha(){
            cambiar_fecha = true;
            var fecha = $('#fecha_new').val().split("-");
